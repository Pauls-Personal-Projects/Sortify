<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sortify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_ultra_dark_green</item>
        <item name="colorPrimaryVariant">@color/material_ultra_dark_teal</item>
        <item name="colorOnPrimary">@color/material_ultra_light_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_ultra_dark_teal</item>
        <item name="colorSecondaryVariant">@color/material_ultra_dark_green</item>
        <item name="colorOnSecondary">@color/material_ultra_light_teal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>